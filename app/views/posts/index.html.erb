<head>
<%= stylesheet_link_tag 'posts.css' %>
</head>
<div class="container px-5 px-sm-0">
    <div class="row">
        <%= render 'list', posts: @posts %>
        <div class="cols col-md-8 offset-md-1">
       　　　<h2 class="title">Users</h2>
              <table class="tables table-hover table-inverse">
                <thead>
                  <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                  <tr>
                     <td class="text">
                       <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image(100,100) %>
                       <% end %>
                    </td>
                     <td class="text"><%= user.name %></td>
                     <td class="text">
                       <%= link_to "Show",  user_path(user) %>
                    </td>
                  </tr>
                </tbody>
                 <% end %>
              </table>
        </div>
    </div>
</div>
      
  <style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center; 
    white-space: nowrap;
    overflow: auto;
  }
  
  
  .cols {
    width: 100%;
  }
  
  .text {
   padding: 100px;
 }

  .users {
    margin: 0;
    padding: 0;
    font-size: 35px;
  }
  
  .title {
    font-size: 30px;
  }
  
  .tables {
     /* テーブルの上下間隔を追加 */
    padding: 20px; 
  }
  </style>
      
<%= paginate @posts %>