<div class="mb-6 text-center">
  <strong class="title">
     Edit Product
  </strong>
</div>

<div class='container'>
  <%= form_with model: @product, url: admin_product_path(@product), local: true, class: "xl:w-8/12 md:w-10/12", data: { turbo: false }  do |f| %>
    <%= render "admin/shared/error_messages", resource: @product %>
    <div class="nil"> 
      <%= f.label :name, class: "title" %>
      <%= f.text_field :name, size: "45" %>
    </div>
    <div class="nil">
      <%= f.label :description, class: "title" %>
      <%= f.text_area :description, size: "60Ã—10" %>
    </div>
    <div class="nil">
      <%= f.label :image, class: "title" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <%= f.submit  'Update' , class: "submit" %>|
     <%= link_to "Back", admin_products_path%>
  <% end %>
</div>

<style>
  .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 500px;
        margin:0 auto;
    }
    
    .title {
        font-size: 25px;
    }
    
    .nil {
        margin: 10px;
    }
    
    .submit {
        background: linear-gradient(to right, #fc4a1a, #1a2a6c);
        color: #fff;
        border-radius: 10px;
        font-size: 30px;
        margin: 60px 150px;
    }
</style>