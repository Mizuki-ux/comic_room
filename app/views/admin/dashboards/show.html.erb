 <div class="cols col-md-7 offset-md-1">
          <% if @post %>
     　　　<h2 class="users"<%= @post.user.name %>></h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th colspan="3">Comment</th>
                  </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                    <tr>
　　　　　　　　　　　<td class="text image-container">
                       <% if post.image.attached? %>
    　　　　　　　　　　　　　　　　<%= image_tag url_for(post.image), size: "100x100" %>
                    　　<% end %>
                      </td>
                      <td class="text">
                      <%= link_to "#{post.title}", admin_post_path(post) %>
                      </td>
                      <td class="text">
                      <%= post.body %>
                      </td>
                      <td>
                        <%= link_to admin_post_path(post.id) do %>
                        <% end %>
                        <p><%= "#{post.post_comments.count} コメント" %></p>  
                      </td>
                    </tr>
                  <% end %>
                    
                </tbody>
              </table>
          <% else %>
            <h2 class="post">Post not found</h2>
          <% end %>
            
        </div>
        
    　 </div>
    　</div>
    </div>
<%= paginate @posts %>

