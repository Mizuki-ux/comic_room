 <div class="cols col-md-7 offset-md-1">
     　  <h2 class="users">Post</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th class="title">Title</th>
                  <th class="title">Comment</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
             <tbody>
                <tr>
                  <td class="text">
                  <%= image_tag url_for(@post.image), size: "100x100" %>
                      <%= link_to user_path(@post.user.id) do %>
                     <br><%= link_to @post.user.name, admin_dashboard_path(@post.user) %>
                      <% end %>
                  </td>
                  <td class="text">
                  <%= @post.title %>
                  </td>
                  <td class="text">
                  <%= @post.body %>
                  </td>
                </tr>
            </tbody>
     　　　 </table>
     　　　 <div>
          <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
            <h4><%= post_comment.created_at.strftime('%Y/%m/%d') %>:
               <%= post_comment.user.name %>
            </h4>
             <p><%= post_comment.comment %></p>
          <% end %>
        </div>


      </div>
    </div>
  </div>

<style>

  .row {
    display: flex;
  }

  .cols {
    width: 100%;
    white-space: nowrap;
    overflow: auto;
  }

  .text {
   padding: 0 30px;
 }

  .users {
    margin: 0;
    padding: 0;
    font-size: 35px;
  }

  .title {
    font-size: 20px;
    padding-right: 60px;
  }

  .tables {
    width: 80%;
  }

  .button-container {
    text-align: right; /* リンクを右寄せ */
    margin-top: 20px;
  }

  .link-text {
   font-size: 20px;
   border-radius: 20%;
   text-decoration: none; /* 下線を消す */
   color:  #000;
   padding-left: 10px;
  }