<div class="mb-8 text-center">
  <strong class="title">
    Products
  </strong>
  <%= link_to '新しい順', products_path(latest: "true") %>
|<%= link_to '古い順', products_path(old: "true") %>
|<%= link_to '評価の高い順', products_path(star_count: "true") %>
</div>
<div class='flex flex-wrap justify-center'>
  <% @products.each do |product| %>
    <div class="w-full max-w-sm rounded-lg xl:w-4/12 md:w-6/12" style="flex: 1;">
      <%= link_to product_path(product) do %>
        <%= image_tag product.image, size: 150 %>
        <div class="px-5 pb-5">
          <p class="text-3xl font-semibold tracking-tight text-gray-900 mb-4"><%= product.name %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .title {
    font-size: 30px;
  }
  
  .flex {
  display: flex;
  flex-wrap: wrap;
}

</style>