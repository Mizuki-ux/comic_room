        <% if post.user.present? %>
          <%= link_to post.user do %>
            <%= image_tag post.user.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td>
          <% if post.category.present? %>
            <%= post.category %>
          <% end %>
        </td>
          <%= render "public/tagsearches/btn", post: post %>
