
<div class="container">
  <% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
 <% flash.delete(:error) %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th class="text">Title</th>
      <th>Opinion</th>
      <th class="text">Tag</th>
      <th></th>
      <th class="subtext"></th>
    </tr>
  </thead>
