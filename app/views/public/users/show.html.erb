
  <%= render 'public/users/list', users: @users %>

  <div class="container  px-5 px-sm-0">
    <div class="row">
      <div class="col col-md-3">
        
        <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name:</th>
                <th><%= @user.name %></th>
              </tr>
              <tr></tr>
              <tr>
                <th>introduction: </th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="cols col-md-7 offset-md-1 ">
          <% if @post %>
     　　　<h2 class="users"<%= @post.user.name %>></h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr> 
                    <th></th>
                    <th>Title</th>
                    <th>Comment</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                    <tr>
                      <td class="text image-container">
                       <% if post.image.attached? %>
    　　　　　　　　　　　　　　　　<%= image_tag url_for(post.image), size: "100x100" %>
                    　　<% end %>
                      </td>
                      <td class="text">
                      <%= link_to "#{post.title}", post_path(post) %>
                      </td>
                      <td class="text">
                      <%= post.body %>
                      </td>
                      <td>
                        <%= link_to post_path(post.id) do %>
                        <% end %>
                        <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>  
                      </td>
                    </tr>
                  <% end %>
                    
                </tbody>
              </table>
          <% else %>
            <h2 class="post">Post not found</h2>
          <% end %>
            
        </div>
        
    　 </div>
    　</div>
    </div>
<%= paginate @posts %>

